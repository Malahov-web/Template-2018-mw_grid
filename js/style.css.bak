	background-color : #372;
}
.name{
	margin : 50px 0;
	width : 100%;
	text-align : center;
	color : #fff;
	font-size : 24px;
}
.demo_block{
	margin-bottom : 20px;
	width : 100%;
	height : 100px;
	height : 60px;
	background-color : #897;
	line-height : 100px;
	font-size : 1rem; line-height : 60px;
	text-align : center;
	color : #fff;
}
.row-table .demo_block{
	background-color : #789;
	height : auto;
}
.demo_inline_block{
	margin-bottom : 20px;
	width : 100%;
	height : auto;
	padding : 10px; box-sizing : border-box;
	background-color : #987;
	font-size : 1rem; line-height : 1.5rem;
	color : #e9e8e7;
}
.demo_flex_block{
	margin-bottom : 20px;
	width : 100%;
	height : auto; height : 100%; position : relative;
	padding : 10px; box-sizing : border-box;
	background-color : #979;
	font-size : 1rem; line-height : 1.5rem;
	color: #e9e7e9;
}
